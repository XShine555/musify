<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MusifyEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="android:background">@drawable/corner_radius_8dp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="MusifyPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MusifySecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MusifyTransparentTextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MusifyHeaderText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusifyBodyText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="MusifyHintText">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
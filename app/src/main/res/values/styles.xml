<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MusifyEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="boxStrokeColor">@color/on_primary</item>
        <item name="android:background">@drawable/corner_radius_8dp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:drawableTint">@color/hint</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="MusifyPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/primary_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifySecondaryButton" parent="MusifyPrimaryButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MusifyTransparentTextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MusifyOutlineButton" parent="MusifyPrimaryButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/secondary</item>
    </style>

    <style name="MusifyHeaderText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifyBodyText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifySubtleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifySmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="MusifyHintText">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
</resources>
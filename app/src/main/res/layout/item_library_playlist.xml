<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlist_image"
        android:layout_width="@dimen/image_size_medium"
        android:layout_height="@dimen/image_size_medium"
        android:contentDescription="@string/item_playlist_content_descriptor"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Musify.ImageRounded"
        tools:srcCompat="@drawable/playlist_placeholder" />

    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="match_parent"
        android:maxWidth="@dimen/image_size_small"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_small"
        android:textAppearance="@style/TextAppearance.Musify"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/playlist_image"
        app:layout_constraintStart_toStartOf="@id/playlist_image"
        app:layout_constraintEnd_toEndOf="@id/playlist_image"
        tools:text="Title" />

</androidx.constraintlayout.widget.ConstraintLayout>

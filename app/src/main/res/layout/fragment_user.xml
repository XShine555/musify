<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserFragment"
    tools:paddingHorizontal="@dimen/screen_padding_horizontal"
    tools:paddingVertical="@dimen/screen_padding_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/image_size_medium"
        android:layout_height="@dimen/image_size_medium"
        android:contentDescription="@string/user_profile_picture"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Musify.ImageRounded"
        tools:srcCompat="@drawable/ic_person" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_medium"
        android:text="@string/user"
        android:textAppearance="@style/TextAppearance.Musify.Large"
        app:layout_constraintBottom_toBottomOf="@id/user_icon"
        app:layout_constraintEnd_toStartOf="@id/config_button"
        app:layout_constraintStart_toEndOf="@id/user_icon"
        app:layout_constraintTop_toTopOf="@id/user_icon" />

    <ImageButton
        android:id="@+id/config_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_more_vert"
        android:contentDescription="@string/user_configuration"
        app:layout_constraintBottom_toBottomOf="@id/user_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_icon" />

    <TextView
        android:id="@+id/playlists_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_large"
        android:text="@string/library"
        android:textAppearance="@style/TextAppearance.Musify.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_small"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlists_title"
        tools:itemCount="1"
        tools:listitem="@layout/item_user_playlist" />

    <TextView
        android:id="@+id/tracks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_medium"
        android:text="@string/tracks"
        android:textAppearance="@style/TextAppearance.Musify.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_list" />

    <ImageButton
        android:id="@+id/add_track_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_add"
        android:contentDescription="@string/add_track"
        app:layout_constraintBottom_toBottomOf="@id/tracks_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tracks_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_track_button"
        tools:itemCount="1"
        tools:listitem="@layout/item_user_track" />

</androidx.constraintlayout.widget.ConstraintLayout>

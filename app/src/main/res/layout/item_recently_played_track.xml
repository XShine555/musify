<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:contentDescription="@string/item_playlist_content_descriptor"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Musify.ImageRounded"
        tools:srcCompat="@drawable/playlist_placeholder" />

    <TextView
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_small"
        android:textAppearance="@style/TextAppearance.Musify"
        app:layout_constraintBottom_toTopOf="@id/track_owner_name"
        app:layout_constraintStart_toEndOf="@id/track_image"
        app:layout_constraintTop_toTopOf="@id/track_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Title" />

    <TextView
        android:id="@+id/track_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Musify.Small"
        app:layout_constraintBottom_toBottomOf="@id/track_image"
        app:layout_constraintStart_toStartOf="@id/track_title"
        app:layout_constraintTop_toBottomOf="@id/track_title"
        tools:text="Owner" />

</androidx.constraintlayout.widget.ConstraintLayout>
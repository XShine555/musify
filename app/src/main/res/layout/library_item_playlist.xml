<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/item_playlist_content_descriptor"
        android:background="@drawable/corner_radius_16dp"
        app:srcCompat="@drawable/playlist_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MusifyBodyText"
        app:layout_constraintStart_toEndOf="@id/playlistImage"
        app:layout_constraintTop_toTopOf="@id/playlistImage"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/playlistOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MusifySubtleText"
        app:layout_constraintStart_toEndOf="@id/playlistImage"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
